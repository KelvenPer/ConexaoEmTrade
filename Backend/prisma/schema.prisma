generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// Enums
// =========================

enum TenantType {
  INTERNAL // você / plataforma
  INDUSTRIA // indústria (Nestlé, etc.)
  VAREJO // varejo (rede/loja)
}

enum UserRole {
  PLATFORM_ADMIN // dono da plataforma (você)
  SUPER_ADMIN // admin mestre do tenant (ex.: varejo)
  TENANT_ADMIN // admin dentro do tenant (Nestlé, Varejo X)
  USER // usuário comum
}

enum AccessChannel {
  industria
  varejo
  interno
}

enum UserSector {
  GLOBAL
  MARKETING
  TRADE_MARKETING
  COMERCIAL
  ANALITICA
}

enum ModuleCode {
  DASHBOARD
  MARKETING
  TRADE
  RETAIL_MEDIA
  ECOMMERCE
  COMERCIAL
  ANALYTICS
  CONFIG
  CONTRACTS
}

enum PermissionLevel {
  VIEW
  MANAGE
}

enum InitiativeType {
  MARKETING
  TRADE
  RETAIL_MEDIA
  ECOMMERCE
  COMERCIAL
}

enum ProofStatus {
  PENDENTE
  VALIDADO_IA
  REJEITADO
}

enum WorkflowAction {
  APROVACAO_SOLICITADA
  APROVADO
  REPROVADO
  COMENTARIO_ADICIONADO
}

enum AuditAction {
  CREATE
  UPDATE
  DELETE
}

// =========================
// Tenant / Organização
// =========================

model TBLTENANT {
  id        Int        @id @default(autoincrement())
  name      String
  type      TenantType
  status    String     @default("ativo")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  users        TBLUSER[]
  suppliers    TBLFORN[]
  retailers    TBLRETAIL[]
  partnerships TBLPARTNERSHIP[]
  products     TBLPROD[]
}

// =========================
// Indústria (Fornecedor)
// =========================

model TBLFORN {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  document  String?
  segment   String?
  channel   String?
  status    String   @default("ativo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant        TBLTENANT             @relation(fields: [tenantId], references: [id])
  jbps          TBLJBP[]
  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  users         TBLUSER[]
  partnerships  TBLPARTNERSHIP[]
  products      TBLPROD[]
  initiatives   TBLINITIATIVE[]
  wallets       TBLWALLET[]
  dailySales    TBLDAILY_SALES[]
}

// =========================
// Varejo
// =========================

model TBLRETAIL {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  document  String?
  segment   String?
  channel   String?
  status    String   @default("ativo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant        TBLTENANT              @relation(fields: [tenantId], references: [id])
  jbps          TBLJBP[]
  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  users         TBLUSER[]
  partnerships  TBLPARTNERSHIP[]
  initiatives   TBLINITIATIVE[]
  stores        TBLSTORE[]
  dailySales    TBLDAILY_SALES[]
}

// =========================
// Parceria Industria x Varejo
// =========================

model TBLPARTNERSHIP {
  id         Int      @id @default(autoincrement())
  tenantId   Int
  supplierId Int
  retailId   Int
  status     String   @default("ativo") // ativo, inativo, encerrado
  validFrom  DateTime? // opcional: data de inicio do contrato
  validTo    DateTime? // opcional: data de fim do contrato
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant   TBLTENANT @relation(fields: [tenantId], references: [id])
  supplier TBLFORN   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL @relation(fields: [retailId], references: [id])
}

// =========================
// Ativos / Formatos
// =========================

model TBLATV {
  id          Int      @id @default(autoincrement())
  name        String
  channel     String
  type        String?
  format      String?
  unit        String?
  basePrice   Float?
  currency    String   @default("BRL")
  description String?
  status      String   @default("ativo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  jbpItens         TBLJBPITEM[]
  campanhaItens    TBLCAMPANHAITEM[]
  execTarefas      TBLEXECTAREFA[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
  initiativeAtivos TBLINITIATIVE_ASSET[]
}

// =========================
// Produtos
// =========================

model TBLPROD {
  id          Int      @id @default(autoincrement())
  tenantId    Int
  supplierId  Int
  code        String
  description String
  complement  String?
  brand       String?
  category    String?
  status      String   @default("ativo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   TBLTENANT @relation(fields: [tenantId], references: [id])
  supplier TBLFORN   @relation(fields: [supplierId], references: [id])

  jbpItens           TBLJBPITEM[]
  campanhaItens      TBLCAMPANHAITEM[]
  retailMediaItens   TBLRETAILMEDIA_ITEM[]
  initiativeProdutos TBLINITIATIVE_PRODUCT[]
  vendasResumo       TBLVENDASRESUMO[]
  dailySales         TBLDAILY_SALES[]
  jbpItemMixes       TBLJBPITEM_MIX[]

  @@unique([tenantId, code])
  @@index([brand])
  @@index([category])
}

// =========================
// JBP
// =========================

model TBLJBP {
  id           Int       @id @default(autoincrement())
  supplierId   Int
  retailId     Int?
  name         String
  year         Int?
  periodStart  DateTime?
  periodEnd    DateTime?
  strategy     String?
  kpiSummary   String?
  totalBudget  Float?
  status       String    @default("rascunho")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  createdById  Int?
  initiativeId Int?
  walletId     Int?
  kpiQueryId   Int?

  supplier     TBLFORN        @relation(fields: [supplierId], references: [id])
  retail       TBLRETAIL?     @relation(fields: [retailId], references: [id])
  itens        TBLJBPITEM[]
  campanhas    TBLCAMPANHA[]
  execPlanos   TBLEXECPLANO[]
  retailPlanos TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  initiative   TBLINITIATIVE? @relation(fields: [initiativeId], references: [id])
  wallet       TBLWALLET?     @relation(fields: [walletId], references: [id])
  kpiQuery     TBLQUERY?      @relation(fields: [kpiQueryId], references: [id])
  insights     TBLINSIGHT[]
}

model TBLJBPITEM {
  id                  Int       @id @default(autoincrement())
  jbpId               Int
  assetId             Int
  productId           Int?
  description         String?
  initiativeType      String    @default("JBP")
  periodStart         DateTime?
  periodEnd           DateTime?
  unit                String?
  quantity            Int?
  negotiatedUnitPrice Float?
  totalValue          Float?
  notes               String?

  jbp     TBLJBP     @relation(fields: [jbpId], references: [id])
  asset   TBLATV     @relation(fields: [assetId], references: [id])
  product TBLPROD?   @relation(fields: [productId], references: [id])

  campanhaItens    TBLCAMPANHAITEM[]
  execTarefas      TBLEXECTAREFA[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
  itemStores       TBLJBPITEM_STORE[]
  proofs           TBLPROOF[]
  mix              TBLJBPITEM_MIX[]
}

model TBLJBPITEM_MIX {
  id                Int      @id @default(autoincrement())
  jbpItemId         Int
  productId         Int?
  brandCriteria     String?
  categoryCriteria  String?

  jbpItem TBLJBPITEM @relation(fields: [jbpItemId], references: [id], onDelete: Cascade)
  product TBLPROD?   @relation(fields: [productId], references: [id])
}

// =========================
// Iniciativas (Guarda-chuva para JBP, Campanhas, etc.)
// =========================

model TBLINITIATIVE {
  id          Int            @id @default(autoincrement())
  supplierId  Int?
  retailId    Int?
  type        InitiativeType
  name        String
  objective   String?
  channel     String?
  startDate   DateTime?
  endDate     DateTime?
  status      String         @default("planejada")
  totalBudget Float?
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  supplier TBLFORN?   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  produtos TBLINITIATIVE_PRODUCT[]
  ativos   TBLINITIATIVE_ASSET[]
  jbps     TBLJBP[]
  campanhas TBLCAMPANHA[]
}

model TBLINITIATIVE_PRODUCT {
  id             Int           @id @default(autoincrement())
  initiativeId   Int
  productId      Int
  goalMetric     String?
  goalValue      Float?
  allocatedValue Float?
  notes          String?

  initiative TBLINITIATIVE @relation(fields: [initiativeId], references: [id])
  product    TBLPROD       @relation(fields: [productId], references: [id])
}

model TBLINITIATIVE_ASSET {
  id           Int           @id @default(autoincrement())
  initiativeId Int
  assetId      Int
  plannedValue Float?
  notes        String?

  initiative TBLINITIATIVE @relation(fields: [initiativeId], references: [id])
  asset      TBLATV        @relation(fields: [assetId], references: [id])
}

// =========================
// Campanhas
// =========================

model TBLCAMPANHA {
  id           Int       @id @default(autoincrement())
  supplierId   Int
  retailId     Int?
  jbpId        Int?
  name         String
  objective    String?
  channel      String? // "LOJA_FISICA", "ECOMMERCE", "APP", etc.
  startDate    DateTime?
  endDate      DateTime?
  status       String    @default("planejada") // planejada, em_producao, aprovada, veiculando, encerrada
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  initiativeId Int?

  supplier   TBLFORN        @relation(fields: [supplierId], references: [id])
  retail     TBLRETAIL?     @relation(fields: [retailId], references: [id])
  jbp        TBLJBP?        @relation(fields: [jbpId], references: [id])
  itens      TBLCAMPANHAITEM[]
  initiative TBLINITIATIVE? @relation(fields: [initiativeId], references: [id])
}

model TBLCAMPANHAITEM {
  id               Int       @id @default(autoincrement())
  campanhaId       Int
  jbpItemId        Int?
  assetId          Int
  productId        Int?
  title            String?
  contentType      String? // banner, video, push, post, etc.
  artDeadline      DateTime?
  approvalDeadline DateTime?
  goLiveDate       DateTime?
  urlDestino       String?
  notes            String?
  creativeUrl      String? // link da arte (Canva, Figma, Drive, imagem…)
  approvalStatus   String    @default("rascunho")

  campanha TBLCAMPANHA @relation(fields: [campanhaId], references: [id])
  jbpItem  TBLJBPITEM? @relation(fields: [jbpItemId], references: [id])
  asset    TBLATV      @relation(fields: [assetId], references: [id])
  product  TBLPROD?    @relation(fields: [productId], references: [id])
}

// =========================
// Execução de Plano
// =========================

model TBLEXECPLANO {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  jbpId       Int?
  name        String
  periodStart DateTime?
  periodEnd   DateTime?
  status      String    @default("planejado") // planejado, em_execucao, concluido
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier TBLFORN         @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL?      @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?         @relation(fields: [jbpId], references: [id])
  tarefas  TBLEXECTAREFA[]
}

model TBLEXECTAREFA {
  id          Int       @id @default(autoincrement())
  planoExecId Int
  jbpItemId   Int?
  assetId     Int
  storeId     Int
  checklist   String?
  deadline    DateTime?
  status      String    @default("pendente") // pendente, em_execucao, concluida
  photoUrl    String?
  notes       String?

  planoExec TBLEXECPLANO @relation(fields: [planoExecId], references: [id])
  jbpItem   TBLJBPITEM?  @relation(fields: [jbpItemId], references: [id])
  asset     TBLATV       @relation(fields: [assetId], references: [id])
  store     TBLSTORE     @relation(fields: [storeId], references: [id])
}

// =========================
// Retail Media
// =========================

model TBLRETAILMEDIA_PLANO {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  jbpId       Int?
  name        String
  channel     String // "ECOMMERCE", "APP"
  periodStart DateTime?
  periodEnd   DateTime?
  status      String    @default("planejado")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier TBLFORN             @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL?          @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?             @relation(fields: [jbpId], references: [id])
  itens    TBLRETAILMEDIA_ITEM[]
}

model TBLRETAILMEDIA_ITEM {
  id                Int       @id @default(autoincrement())
  planoRetailId     Int
  jbpItemId         Int?
  assetId           Int
  productId         Int?
  pageType          String? // home, categoria, pdp...
  position          String? // topo, meio, rodape, carrossel...
  device            String? // desktop, mobile, ambos
  impressionsTarget Int?
  clicksTarget      Int?
  cpcNegociado      Float?
  totalValue        Float?
  notes             String?

  planoRetail TBLRETAILMEDIA_PLANO @relation(fields: [planoRetailId], references: [id])
  jbpItem     TBLJBPITEM?          @relation(fields: [jbpItemId], references: [id])
  asset       TBLATV               @relation(fields: [assetId], references: [id])
  product     TBLPROD?             @relation(fields: [productId], references: [id])
}

// =========================
// Vendas Resumo (Agregado)
// =========================

model TBLVENDASRESUMO {
  id           Int      @id @default(autoincrement())
  supplierId   Int
  retailId     Int?
  jbpId        Int?
  ano          Int
  mes          Int
  productId    Int // Essencial para saber O QUE vendeu
  storeId      Int? // Essencial para saber ONDE vendeu (opcional se for agregado da rede)
  channel      String? // LOJA_FISICA, ECOMMERCE, TOTAL
  sellInValue  Float?
  sellOutValue Float?
  volume       Float?
  marketShare  Float?
  notes        String?

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  product  TBLPROD    @relation(fields: [productId], references: [id])
  store    TBLSTORE?  @relation(fields: [storeId], references: [id])
}

// =========================
// PDV / Lojas
// =========================

model TBLSTORE {
  id            Int      @id @default(autoincrement())
  retailId      Int
  code          String // Código da loja no ERP do varejo
  name          String
  format        String? // Hiper, Super, Express
  cluster       String? // Cluster A, B, C (Perfil de loja)
  city          String?
  state         String?

  retail        TBLRETAIL          @relation(fields: [retailId], references: [id])
  tasks         TBLEXECTAREFA[]
  sales         TBLVENDASRESUMO[]
  dailySales    TBLDAILY_SALES[]
  jbpItemStores TBLJBPITEM_STORE[]
  insights      TBLINSIGHT[]

  @@unique([retailId, code])
}

// Join table para M2M entre JBPItem e Store
model TBLJBPITEM_STORE {
  jbpItemId Int
  storeId   Int
  
  jbpItem   TBLJBPITEM @relation(fields: [jbpItemId], references: [id], onDelete: Cascade)
  store     TBLSTORE   @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@id([jbpItemId, storeId])
}

// =========================
// Vendas Diarias (Sell-out)
// =========================

model TBLDAILY_SALES {
  id           Int      @id @default(autoincrement())
  date         DateTime @db.Date
  productId    Int
  storeId      Int
  supplierId   Int
  retailId     Int
  sellOutValue Float?
  volume       Float?

  product  TBLPROD   @relation(fields: [productId], references: [id])
  store    TBLSTORE  @relation(fields: [storeId], references: [id])
  supplier TBLFORN   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL @relation(fields: [retailId], references: [id])

  @@unique([date, productId, storeId])
}

// =========================
// Proof of Performance
// =========================

model TBLPROOF {
  id           Int         @id @default(autoincrement())
  jbpItemId    Int
  photoUrl     String
  status       ProofStatus @default(PENDENTE)
  aiConfidence Float? // Nível de certeza da IA
  uploadedAt   DateTime    @default(now())

  jbpItem TBLJBPITEM @relation(fields: [jbpItemId], references: [id], onDelete: Cascade)
}

// =========================
// Gestão de Verbas (Wallet)
// =========================

model TBLWALLET {
  id             Int       @id @default(autoincrement())
  supplierId     Int
  name           String
  year           Int
  totalBudget    Float
  consumedBudget Float     @default(0)
  status         String    @default("aberto") // aberto, fechado
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  supplier TBLFORN @relation(fields: [supplierId], references: [id])
  jbps     TBLJBP[]

  @@unique([supplierId, name, year])
}

// =========================
// BI & Analytics (SQL Lab)
// =========================

model TBLQUERY {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  sqlQuery    String   @db.Text
  createdById Int
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  createdBy   TBLUSER  @relation(fields: [createdById], references: [id])
  jbps        TBLJBP[]
}

// =========================
// Insights operacionais
// =========================

model TBLINSIGHT {
  id          Int      @id @default(autoincrement())
  tenantId    Int?
  supplierId  Int?
  retailId    Int?
  storeId     Int?
  jbpId       Int?
  type        String   @default("info") // critical, warning, opportunity, info
  category    String?
  title       String
  description String?
  impact      String?
  status      String   @default("aberto") // aberto, em_progresso, resolvido
  actionType  String?
  createdAt   DateTime @default(now())
  resolvedAt  DateTime?

  tenant   TBLTENANT? @relation(fields: [tenantId], references: [id])
  supplier TBLFORN?   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  store    TBLSTORE?  @relation(fields: [storeId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])

  @@index([supplierId])
  @@index([retailId])
  @@index([storeId])
  @@index([jbpId])
}

// =========================
// Auditoria e Workflow
// =========================

model TBLAUDITLOG {
  id        Int         @id @default(autoincrement())
  timestamp DateTime    @default(now())
  userId    Int
  action    AuditAction
  tableName String
  recordId  Int
  oldValue  Json?
  newValue  Json?

  user TBLUSER @relation(fields: [userId], references: [id])

  @@index([tableName, recordId])
}

model TBLWORKFLOW_HISTORY {
  id           Int            @id @default(autoincrement())
  timestamp    DateTime       @default(now())
  relatedTable String // Ex: "TBLCAMPANHA"
  recordId     Int
  userId       Int
  action       WorkflowAction
  fromStatus   String?
  toStatus     String?
  reason       String? // Motivo da reprovação, comentário, etc.

  user TBLUSER @relation(fields: [userId], references: [id])

  @@index([relatedTable, recordId])
}

// =========================
// Usuários e Acessos
// =========================

model TBLUSER {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  login         String?       @unique
  passwordHash  String
  role          UserRole      @default(USER)
  status        String        @default("ativo")
  createdAt     DateTime      @default(now())
  photoUrl      String?
  accessChannel AccessChannel @default(industria)
  tenantId      Int
  supplierId    Int?
  retailId      Int?
  sector        UserSector    @default(MARKETING)

  tenant          TBLTENANT             @relation(fields: [tenantId], references: [id])
  supplier        TBLFORN?              @relation(fields: [supplierId], references: [id])
  retail          TBLRETAIL?            @relation(fields: [retailId], references: [id])
  auditLogs       TBLAUDITLOG[]
  workflowActions TBLWORKFLOW_HISTORY[]
}

// Politicas padrao de permissao por combinacao Role / Canal / Setor
model TBLACCESSPOLICY {
  id            Int             @id @default(autoincrement())
  role          UserRole
  accessChannel AccessChannel
  sector        UserSector      @default(GLOBAL)
  module        ModuleCode
  permission    PermissionLevel
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@unique([role, accessChannel, sector, module, permission])
}

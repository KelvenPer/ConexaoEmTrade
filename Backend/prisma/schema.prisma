generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// Enums
// =========================

enum TenantType {
  INTERNAL   // você / plataforma
  INDUSTRIA  // indústria (Nestlé, etc.)
  VAREJO     // varejo (rede/loja)
}

enum UserRole {
  PLATFORM_ADMIN   // dono da plataforma (você)
  TENANT_ADMIN     // admin dentro do tenant (Nestlé, Varejo X)
  USER             // usuário comum
}

enum AccessChannel {
  industria
  varejo
  interno
}

// =========================
// Tenant / Organização
// =========================

model TBLTENANT {
  id        Int        @id @default(autoincrement())
  name      String
  type      TenantType
  status    String     @default("ativo")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  users     TBLUSER[]
  suppliers TBLFORN[]
  retailers TBLRETAIL[]
}

// =========================
// Indústria (Fornecedor)
// =========================

model TBLFORN {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  document  String?
  segment   String?
  channel   String?
  status    String   @default("ativo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant        TBLTENANT             @relation(fields: [tenantId], references: [id])

  jbps          TBLJBP[]
  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  users         TBLUSER[]
}

// =========================
// Varejo
// =========================

model TBLRETAIL {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  document  String?
  segment   String?
  channel   String?
  status    String   @default("ativo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant        TBLTENANT             @relation(fields: [tenantId], references: [id])

  jbps          TBLJBP[]
  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  users         TBLUSER[]
}

// =========================
// Ativos / Formatos
// =========================

model TBLATV {
  id          Int      @id @default(autoincrement())
  name        String
  channel     String
  type        String?
  format      String?
  unit        String?
  basePrice   Float?
  currency    String   @default("BRL")
  description String?
  status      String   @default("ativo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  jbpItens         TBLJBPITEM[]
  campanhaItens    TBLCAMPANHAITEM[]
  execTarefas      TBLEXECTAREFA[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
}

// =========================
// JBP
// =========================

model TBLJBP {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  name        String
  year        Int?
  periodStart DateTime?
  periodEnd   DateTime?
  strategy    String?
  kpiSummary  String?
  totalBudget Float?
  status      String    @default("rascunho")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById Int?

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  itens    TBLJBPITEM[]

  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
}

model TBLJBPITEM {
  id                  Int       @id @default(autoincrement())
  jbpId               Int
  assetId             Int
  description         String?
  initiativeType      String    @default("JBP")
  periodStart         DateTime?
  periodEnd           DateTime?
  storeScope          String?
  unit                String?
  quantity            Int?
  negotiatedUnitPrice Float?
  totalValue          Float?
  notes               String?

  jbp   TBLJBP @relation(fields: [jbpId], references: [id])
  asset TBLATV @relation(fields: [assetId], references: [id])

  campanhaItens    TBLCAMPANHAITEM[]
  execTarefas      TBLEXECTAREFA[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
}

// =========================
// Campanhas
// =========================

model TBLCAMPANHA {
  id         Int       @id @default(autoincrement())
  supplierId Int
  retailId   Int?
  jbpId      Int?
  name       String
  objective  String?
  channel    String?   // "LOJA_FISICA", "ECOMMERCE", "APP", etc.
  startDate  DateTime?
  endDate    DateTime?
  status     String    @default("planejada") // planejada, em_producao, aprovada, veiculando, encerrada
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  itens    TBLCAMPANHAITEM[]
}

model TBLCAMPANHAITEM {
  id               Int       @id @default(autoincrement())
  campanhaId       Int
  jbpItemId        Int?
  assetId          Int
  title            String?
  contentType      String?   // banner, video, push, post, etc.
  artDeadline      DateTime?
  approvalDeadline DateTime?
  goLiveDate       DateTime?
  urlDestino       String?
  notes            String?

  creativeUrl      String?   // link da arte (Canva, Figma, Drive, imagem…)
  approvalStatus   String    @default("rascunho") 

  campanha TBLCAMPANHA @relation(fields: [campanhaId], references: [id])
  jbpItem  TBLJBPITEM? @relation(fields: [jbpItemId], references: [id])
  asset    TBLATV      @relation(fields: [assetId], references: [id])
}

// =========================
// Execução de Plano
// =========================

model TBLEXECPLANO {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  jbpId       Int?
  name        String
  periodStart DateTime?
  periodEnd   DateTime?
  status      String    @default("planejado") // planejado, em_execucao, concluido
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  tarefas  TBLEXECTAREFA[]
}

model TBLEXECTAREFA {
  id          Int       @id @default(autoincrement())
  planoExecId Int
  jbpItemId   Int?
  assetId     Int
  storeScope  String    // "Todas as lojas", "Top 50", "Loja 001", etc.
  checklist   String?
  deadline    DateTime?
  status      String    @default("pendente") // pendente, em_execucao, concluida
  photoUrl    String?
  notes       String?

  planoExec TBLEXECPLANO @relation(fields: [planoExecId], references: [id])
  jbpItem   TBLJBPITEM?  @relation(fields: [jbpItemId], references: [id])
  asset     TBLATV       @relation(fields: [assetId], references: [id])
}

// =========================
// Retail Media
// =========================

model TBLRETAILMEDIA_PLANO {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  jbpId       Int?
  name        String
  channel     String    // "ECOMMERCE", "APP"
  periodStart DateTime?
  periodEnd   DateTime?
  status      String    @default("planejado")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  itens    TBLRETAILMEDIA_ITEM[]
}

model TBLRETAILMEDIA_ITEM {
  id                Int     @id @default(autoincrement())
  planoRetailId     Int
  jbpItemId         Int?
  assetId           Int
  pageType          String? // home, categoria, pdp...
  position          String? // topo, meio, rodape, carrossel...
  device            String? // desktop, mobile, ambos
  impressionsTarget Int?
  clicksTarget      Int?
  cpcNegociado      Float?
  totalValue        Float?
  notes             String?

  planoRetail TBLRETAILMEDIA_PLANO @relation(fields: [planoRetailId], references: [id])
  jbpItem     TBLJBPITEM?          @relation(fields: [jbpItemId], references: [id])
  asset       TBLATV               @relation(fields: [assetId], references: [id])
}

// =========================
// Vendas Resumo
// =========================

model TBLVENDASRESUMO {
  id           Int     @id @default(autoincrement())
  supplierId   Int
  retailId     Int?
  jbpId        Int?
  ano          Int
  mes          Int
  channel      String? // LOJA_FISICA, ECOMMERCE, TOTAL
  sellInValue  Float?
  sellOutValue Float?
  volume       Float?
  marketShare  Float?
  notes        String?

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
}

// =========================
// Usuários
// =========================

model TBLUSER {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  login         String?       @unique
  passwordHash  String
  role          UserRole      @default(USER)
  status        String        @default("ativo")
  createdAt     DateTime      @default(now())
  photoUrl      String?
  accessChannel AccessChannel @default(industria)
  tenantId      Int
  supplierId    Int?
  retailId      Int?

  tenant   TBLTENANT  @relation(fields: [tenantId], references: [id])
  supplier TBLFORN?   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
}

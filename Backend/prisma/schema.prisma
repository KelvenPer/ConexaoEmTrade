generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =========================
// Enums
// =========================

enum TenantType {
  INTERNAL   // você / plataforma
  INDUSTRIA  // indústria (Nestlé, etc.)
  VAREJO     // varejo (rede/loja)
}

enum UserRole {
  PLATFORM_ADMIN   // dono da plataforma (você)
  SUPER_ADMIN      // admin mestre do tenant (ex.: varejo)
  TENANT_ADMIN     // admin dentro do tenant (Nestlé, Varejo X)
  USER             // usuário comum
}

enum AccessChannel {
  industria
  varejo
  interno
}

enum UserSector {
  GLOBAL
  MARKETING
  TRADE_MARKETING
  COMERCIAL
  ANALITICA
}

enum ModuleCode {
  DASHBOARD
  MARKETING
  TRADE
  RETAIL_MEDIA
  ECOMMERCE
  COMERCIAL
  ANALYTICS
  CONFIG
  CONTRACTS
}

enum PermissionLevel {
  VIEW
  MANAGE
}

enum InitiativeType {
  MARKETING
  TRADE
  RETAIL_MEDIA
  ECOMMERCE
  COMERCIAL
}

// =========================
// Tenant / Organização
// =========================

model TBLTENANT {
  id        Int        @id @default(autoincrement())
  name      String
  type      TenantType
  status    String     @default("ativo")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  users     TBLUSER[]
  suppliers TBLFORN[]
  retailers TBLRETAIL[]
  partnerships TBLPARTNERSHIP[]
  products   TBLPROD[]
}

// =========================
// Indústria (Fornecedor)
// =========================

model TBLFORN {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  document  String?
  segment   String?
  channel   String?
  status    String   @default("ativo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant        TBLTENANT             @relation(fields: [tenantId], references: [id])

  jbps          TBLJBP[]
  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  users         TBLUSER[]
  partnerships  TBLPARTNERSHIP[]
  products      TBLPROD[]
  initiatives   TBLINITIATIVE[]
}

// =========================
// Varejo
// =========================

model TBLRETAIL {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  document  String?
  segment   String?
  channel   String?
  status    String   @default("ativo")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tenant        TBLTENANT             @relation(fields: [tenantId], references: [id])

  jbps          TBLJBP[]
  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  users         TBLUSER[]
  partnerships  TBLPARTNERSHIP[]
  initiatives   TBLINITIATIVE[]
}

// =========================
// Parceria Industria x Varejo
// =========================

model TBLPARTNERSHIP {
  id         Int      @id @default(autoincrement())
  tenantId   Int
  supplierId Int
  retailId   Int
  status     String   @default("ativo") // ativo, inativo, encerrado
  validFrom  DateTime? // opcional: data de inicio do contrato
  validTo    DateTime? // opcional: data de fim do contrato
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  tenant   TBLTENANT @relation(fields: [tenantId], references: [id])
  supplier TBLFORN   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL @relation(fields: [retailId], references: [id])
}

// =========================
// Ativos / Formatos
// =========================

model TBLATV {
  id          Int      @id @default(autoincrement())
  name        String
  channel     String
  type        String?
  format      String?
  unit        String?
  basePrice   Float?
  currency    String   @default("BRL")
  description String?
  status      String   @default("ativo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  jbpItens         TBLJBPITEM[]
  campanhaItens    TBLCAMPANHAITEM[]
  execTarefas      TBLEXECTAREFA[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
  initiativeAtivos TBLINITIATIVE_ASSET[]
}

// =========================
// Produtos
// =========================

model TBLPROD {
  id          Int      @id @default(autoincrement())
  tenantId    Int
  supplierId  Int
  code        String
  description String
  complement  String?
  brand       String?
  category    String?
  status      String   @default("ativo")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tenant   TBLTENANT @relation(fields: [tenantId], references: [id])
  supplier TBLFORN   @relation(fields: [supplierId], references: [id])

  jbpItens         TBLJBPITEM[]
  campanhaItens    TBLCAMPANHAITEM[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
  initiativeProdutos TBLINITIATIVE_PRODUCT[]

  @@unique([tenantId, code])
}

// =========================
// JBP
// =========================

model TBLJBP {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  name        String
  year        Int?
  periodStart DateTime?
  periodEnd   DateTime?
  strategy    String?
  kpiSummary  String?
  totalBudget Float?
  status      String    @default("rascunho")

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById Int?

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  itens    TBLJBPITEM[]

  campanhas     TBLCAMPANHA[]
  execPlanos    TBLEXECPLANO[]
  retailPlanos  TBLRETAILMEDIA_PLANO[]
  vendasResumos TBLVENDASRESUMO[]
  initiatives   TBLINITIATIVE[]
}

model TBLJBPITEM {
  id                  Int       @id @default(autoincrement())
  jbpId               Int
  assetId             Int
  productId           Int?
  description         String?
  initiativeType      String    @default("JBP")
  periodStart         DateTime?
  periodEnd           DateTime?
  storeScope          String?
  unit                String?
  quantity            Int?
  negotiatedUnitPrice Float?
  totalValue          Float?
  notes               String?

  jbp   TBLJBP @relation(fields: [jbpId], references: [id])
  asset TBLATV @relation(fields: [assetId], references: [id])
  product TBLPROD? @relation(fields: [productId], references: [id])

  campanhaItens    TBLCAMPANHAITEM[]
  execTarefas      TBLEXECTAREFA[]
  retailMediaItens TBLRETAILMEDIA_ITEM[]
}

// =========================
// Iniciativas (Trade/Marketing/Retail Media/E-commerce/Comercial)
// =========================

model TBLINITIATIVE {
  id           Int             @id @default(autoincrement())
  jbpId        Int?
  supplierId   Int?
  retailId     Int?
  type         InitiativeType
  name         String
  objective    String?
  channel      String?
  startDate    DateTime?
  endDate      DateTime?
  status       String          @default("planejada")
  totalBudget  Float?
  notes        String?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  supplier TBLFORN?   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  produtos TBLINITIATIVE_PRODUCT[]
  ativos   TBLINITIATIVE_ASSET[]
}

model TBLINITIATIVE_PRODUCT {
  id             Int           @id @default(autoincrement())
  initiativeId   Int
  productId      Int
  goalMetric     String?
  goalValue      Float?
  allocatedValue Float?
  notes          String?

  initiative TBLINITIATIVE @relation(fields: [initiativeId], references: [id])
  product     TBLPROD      @relation(fields: [productId], references: [id])
}

model TBLINITIATIVE_ASSET {
  id             Int           @id @default(autoincrement())
  initiativeId   Int
  assetId        Int
  plannedValue   Float?
  notes          String?

  initiative TBLINITIATIVE @relation(fields: [initiativeId], references: [id])
  asset       TBLATV       @relation(fields: [assetId], references: [id])
}

// =========================
// Campanhas
// =========================

model TBLCAMPANHA {
  id         Int       @id @default(autoincrement())
  supplierId Int
  retailId   Int?
  jbpId      Int?
  name       String
  objective  String?
  channel    String?   // "LOJA_FISICA", "ECOMMERCE", "APP", etc.
  startDate  DateTime?
  endDate    DateTime?
  status     String    @default("planejada") // planejada, em_producao, aprovada, veiculando, encerrada
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  itens    TBLCAMPANHAITEM[]
}

model TBLCAMPANHAITEM {
  id               Int       @id @default(autoincrement())
  campanhaId       Int
  jbpItemId        Int?
  assetId          Int
  productId        Int?
  title            String?
  contentType      String?   // banner, video, push, post, etc.
  artDeadline      DateTime?
  approvalDeadline DateTime?
  goLiveDate       DateTime?
  urlDestino       String?
  notes            String?

  creativeUrl      String?   // link da arte (Canva, Figma, Drive, imagem…)
  approvalStatus   String    @default("rascunho") 

  campanha TBLCAMPANHA @relation(fields: [campanhaId], references: [id])
  jbpItem  TBLJBPITEM? @relation(fields: [jbpItemId], references: [id])
  asset    TBLATV      @relation(fields: [assetId], references: [id])
  product  TBLPROD?    @relation(fields: [productId], references: [id])
}

// =========================
// Execução de Plano
// =========================

model TBLEXECPLANO {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  jbpId       Int?
  name        String
  periodStart DateTime?
  periodEnd   DateTime?
  status      String    @default("planejado") // planejado, em_execucao, concluido
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  tarefas  TBLEXECTAREFA[]
}

model TBLEXECTAREFA {
  id          Int       @id @default(autoincrement())
  planoExecId Int
  jbpItemId   Int?
  assetId     Int
  storeScope  String    // "Todas as lojas", "Top 50", "Loja 001", etc.
  checklist   String?
  deadline    DateTime?
  status      String    @default("pendente") // pendente, em_execucao, concluida
  photoUrl    String?
  notes       String?

  planoExec TBLEXECPLANO @relation(fields: [planoExecId], references: [id])
  jbpItem   TBLJBPITEM?  @relation(fields: [jbpItemId], references: [id])
  asset     TBLATV       @relation(fields: [assetId], references: [id])
}

// =========================
// Retail Media
// =========================

model TBLRETAILMEDIA_PLANO {
  id          Int       @id @default(autoincrement())
  supplierId  Int
  retailId    Int?
  jbpId       Int?
  name        String
  channel     String    // "ECOMMERCE", "APP"
  periodStart DateTime?
  periodEnd   DateTime?
  status      String    @default("planejado")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
  itens    TBLRETAILMEDIA_ITEM[]
}

model TBLRETAILMEDIA_ITEM {
  id                Int     @id @default(autoincrement())
  planoRetailId     Int
  jbpItemId         Int?
  assetId           Int
  productId         Int?
  pageType          String? // home, categoria, pdp...
  position          String? // topo, meio, rodape, carrossel...
  device            String? // desktop, mobile, ambos
  impressionsTarget Int?
  clicksTarget      Int?
  cpcNegociado      Float?
  totalValue        Float?
  notes             String?

  planoRetail TBLRETAILMEDIA_PLANO @relation(fields: [planoRetailId], references: [id])
  jbpItem     TBLJBPITEM?          @relation(fields: [jbpItemId], references: [id])
  asset       TBLATV               @relation(fields: [assetId], references: [id])
  product     TBLPROD?             @relation(fields: [productId], references: [id])
}

// =========================
// Vendas Resumo
// =========================

model TBLVENDASRESUMO {
  id           Int     @id @default(autoincrement())
  supplierId   Int
  retailId     Int?
  jbpId        Int?
  ano          Int
  mes          Int
  channel      String? // LOJA_FISICA, ECOMMERCE, TOTAL
  sellInValue  Float?
  sellOutValue Float?
  volume       Float?
  marketShare  Float?
  notes        String?

  supplier TBLFORN    @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
  jbp      TBLJBP?    @relation(fields: [jbpId], references: [id])
}

// =========================
// Usuários
// =========================

model TBLUSER {
  id            Int           @id @default(autoincrement())
  name          String
  email         String        @unique
  login         String?       @unique
  passwordHash  String
  role          UserRole      @default(USER)
  status        String        @default("ativo")
  createdAt     DateTime      @default(now())
  photoUrl      String?
  accessChannel AccessChannel @default(industria)
  tenantId      Int
  supplierId    Int?
  retailId      Int?
  sector        UserSector    @default(MARKETING)

  tenant   TBLTENANT  @relation(fields: [tenantId], references: [id])
  supplier TBLFORN?   @relation(fields: [supplierId], references: [id])
  retail   TBLRETAIL? @relation(fields: [retailId], references: [id])
}

// Politicas padrao de permissao por combinacao Role / Canal / Setor
model TBLACCESSPOLICY {
  id            Int             @id @default(autoincrement())
  role          UserRole
  accessChannel AccessChannel
  sector        UserSector      @default(GLOBAL)
  module        ModuleCode
  permission    PermissionLevel
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@unique([role, accessChannel, sector, module, permission])
}

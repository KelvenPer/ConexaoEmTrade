generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model TBLUSER {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  login        String?  @unique
  passwordHash String
  role         String   @default("user")
  status       String   @default("ativo") // <-- NOVO CAMPO
  createdAt    DateTime @default(now())
}

model TBLFORN {
  id         Int      @id @default(autoincrement())
  name       String
  document   String?   // CNPJ / CPF
  segment    String?   // segmento: bebidas, alimentos, higiene...
  channel    String?   // canal principal: varejo, indústria, marketplace...
  status     String    @default("ativo") // "ativo" | "inativo"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TBLATV {
  id          Int      @id @default(autoincrement())
  name        String              // Nome do ativo (ex: Ponta de Gôndola)
  channel     String              // Canal (LOJA_FISICA, ECOMMERCE, APP, etc.)
  type        String?             // Tipo: "in-store", "online", "app", etc.
  format      String?             // Formato: "970x250", "vídeo 30s", etc.
  unit        String?             // Unidade de venda: "por semana", "por mês", "por inserção"
  basePrice   Float?              // Preço base do ativo
  currency    String   @default("BRL")
  description String?             // Descrição do ativo, observações
  status      String   @default("ativo") // ativo / inativo
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}